<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/horizontal_options_in_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginLeft="@dimen/margin_of_variant_options"
    android:layout_marginRight="@dimen/margin_of_variant_options"
    android:layout_marginTop="8dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/select_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view_in_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/variantoption" >

        <LinearLayout
            android:id="@+id/linearlayout_variant_options"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>