<?xml version="1.0" encoding="utf-8"?>
<com.parqueteam.CustomizedViews.LocalizedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="5dp" >

    <RadioButton
        android:id="@+id/checkbox_shipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:padding="0dp" />

    <com.parqueteam.CustomizedViews.LocalizedLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shipping_method_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/shipping_choose_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingBottom="5dp"
            android:paddingTop="3dp"
            android:text="@string/shipping_choose_branch"
            android:textColor="@color/gray_for_more"
            android:visibility="gone" />
    </com.parqueteam.CustomizedViews.LocalizedLinearLayout>

    <TextView
        android:id="@+id/shipping_method_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginRight="5dp"
        android:textColor="@color/black" />

</com.parqueteam.CustomizedViews.LocalizedLinearLayout>