<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoActionBar" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="WithActionBar" parent="android:Theme.Holo.Light">

        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar"></style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#DD111111</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="bludot_rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/starrating</item>
        <item name="android:numStars">5</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
        <item name="android:rating">0</item>
        <item name="android:stepSize">1.0</item>
    </style>

    <style name="ThemeDialogCustom">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="store_info">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="store_info_value">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="bludot_rating_bar_small" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/starrating_small</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:minHeight">23dp</item>
        <item name="android:maxHeight">25dp</item>
        <item name="android:maxWidth">30dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:stepSize">0.5</item>
    </style>

</resources>