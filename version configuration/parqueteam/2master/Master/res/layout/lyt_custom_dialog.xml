<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <Button
            android:id="@+id/cust_dialog_btnCancel"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cancel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/info_item_padding"
        android:layout_marginRight="@dimen/info_item_padding"
        android:orientation="vertical"
        android:padding="15dp" >

        <TextView
            android:id="@+id/cust_dialog_tvAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:lines="3"
            android:text="@string/mybag_message"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/cust_dialog_btnCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/checkout"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cust_dialog_btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="@dimen/big_buy_btn_padding"
            android:background="@color/gray_for_more"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/continue_shopping"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>