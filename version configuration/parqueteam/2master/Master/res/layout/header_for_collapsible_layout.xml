<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_lin_bg"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#efefef"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/home_img_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:src="@drawable/search_icon" />

    <EditText
        android:id="@+id/home_edt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/home_Btn_search"
        android:layout_toRightOf="@id/home_img_search"
        android:background="@null"
        android:gravity="center"
        android:hint="@string/sch_hint_text"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/home_Btn_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/plus_sing" />

</RelativeLayout>