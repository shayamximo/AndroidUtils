<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/category_grid_height_of_layout"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_grid_height_of_image" >

        <ImageView
            android:id="@+id/image_in_category_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#fff" />

        <include
            layout="@layout/loading"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_in_category_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/category_grid_text_size"
        android:padding="5dp"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/black" />

</LinearLayout>