<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/three_columns_grid_dimen"
    android:layout_height="@dimen/three_columns_grid_dimen"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_in_grid_catalog_collection_view_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="#fff"
        android:scaleType="fitXY" />

    <include
        layout="@layout/loading"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_in_grid_catalog_collection_view_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:gravity="center"
        android:textSize="@dimen/catalog_grid_text_size"
        android:textColor="@color/white" />

</RelativeLayout>